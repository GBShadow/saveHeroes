{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./build",
    "strict": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./src",
    "allowJs": true,
    "esModuleInterop": true ,
    "resolveJsonModule": true,
    "experimentalDecorators": true ,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true
  }
}
